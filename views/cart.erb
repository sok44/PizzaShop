<h2>Welcome your cart</h2>
<%= @items.inspect %>

<div id="cart">
	<table class="table table-striped"> 
		<thead> 
			<tr> 
				<th>Name</th>
				<th>Price</th>
				<th>Qty</th>
			</tr> 
		</thead> 
		<tbody> 
			<% total_price = 0 %>
			<% total_qty = 0 %>
			<% @items.each do |item| %>
			<tr>
				<td><%= item[0].title %></td>
				<td><%= item[0].price %></td>
				<td><%= item[1] %></td>
			</tr>
			<% total_price += item[0].price * item[1].to_i %>
			<% total_qty += item[1].to_i %>
			<% end %>

			<tr>
				<td></td>
				<td><%= total_price %></td>
				<td><%= total_qty %></td>
			</tr>

		</tbody> 
	</table>

	<form action="/place_order" method="POST" role="form">
		<input name="order[orders_input]" type="hidden" value="<%= @orders_input %>" />
		<div class="form-group">
			<label>Ваше имя:</label>
			<input name="order[name]" type="text" class="form-control" placeholder="Ваше имя" value="" />
		</div>
		<div class="form-group">
			<label>Телефон:</label>
			<input name="order[phone]" type="text" class="form-control" placeholder="Телефон" value="" />
		</div>
		<div class="form-group">
			<label>Адрес:</label>
			<textarea name="order[address]" class="form-control" placeholder="Адрес" value=""></textarea>
		</div>

		<button type="submit" class="btn btn-success btn-lg">Оформить заказ</button>
		<button class ="btn btn-danger btn-lg" onclick="return cancel_order()">Cancel</button>
	</form>
</div>